<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/com.lorsku.pennapps2017hack"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_centerHorizontal="true"
    android:background="@color/grey"
    >


    <FrameLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="358dp"
        >

        <TextView
            android:text="HELLO WORLD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_weight="2.51"
            android:textSize="50sp" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/shape2"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/card_3"
            android:layout_height="1dp" />

        <LinearLayout
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/shape1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/card_2"
            android:layout_width="1dp"
            android:layout_height="1dp">

        </LinearLayout>

    </FrameLayout>


    <View
        android:id="@+id/item_swipe_right_indicator"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="right"
        android:alpha="0"
        android:background="@drawable/nope" />

    <View
        android:id="@+id/item_swipe_left_indicator"
        android:layout_width="152dp"
        android:layout_height="149dp"
        android:alpha="0"
        android:background="@drawable/like" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp"
        android:background="@drawable/shape"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="0dp"
        android:weightSum="1">


        <LinearLayout
            android:id="@+id/group"
            xmlns:my_app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_weight="0.64">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_weight="16.73"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:id="@+id/detail_block">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app2:srcCompat="@drawable/avatar_default"
                    android:id="@+id/hackathonImage" />

                <TextView
                    android:id="@+id/hackName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:text="Guilherme B. Bastos"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/cidade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#667b84"
                    android:textSize="15sp"
                    tools:text="Uberaba" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#667b84"
                    android:textSize="15sp"
                    android:layout_marginTop="-2dp"
                    tools:text="Minas Gerais" />

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="81dp">

            <Button
                android:id="@+id/btnIgnore"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="DENY"
                android:background="@drawable/button_red"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="15dp"
                android:layout_weight="0.52"
                android:layout_width="100dp" />

            <Button
                android:id="@+id/visitWebsite"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="WEBSITE"
                android:background="@drawable/button_red"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="15dp"
                android:layout_width="100dp"/>

            <Button
                android:id="@+id/btnAccept"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="APPLY"
                android:background="@drawable/button_blue"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="15dp"
                android:layout_width="100dp" />

        </LinearLayout>


    </LinearLayout>

</FrameLayout>